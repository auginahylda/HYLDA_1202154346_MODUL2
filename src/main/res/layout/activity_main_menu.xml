<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.hylda_1202154346_modul2.MainMenu">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="354dp"
        android:layout_height="340dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_order"
        app:srcCompat="@drawable/splash"
        tools:layout_editor_absoluteX="15dp" />

    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="114dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="19dp"
        android:fontFamily="cursive"
        android:text="Choose Order:"
        android:textColor="#FF007F"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order">

        <RadioButton
            android:id="@+id/dineIn"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="180dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="20dp"
            android:checked="true"
            android:onClick="checkButton"
            android:text="Dine In"
            android:textColor="#FF007F"
            android:textSize="19dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/takeAway"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="145dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="20dp"
            android:onClick="checkButton"
            android:text="Take Away"
            android:textColor="#FF007F"
            android:textSize="19dp"
            android:textStyle="bold" />

    </RadioGroup>


    <Button
        android:id="@+id/btn_order"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="119dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="21dp"
        android:backgroundTint="#FF007F"
        android:onClick="pesanSekarang"
        android:text="Order Now"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />


</android.support.constraint.ConstraintLayout>
